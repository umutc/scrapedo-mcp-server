  "author": "umutc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umutc/scrapedo-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/umutc/scrapedo-mcp-server/issues"
  },
  "homepage": "https://github.com/umutc/scrapedo-mcp-server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "axios": "^1.7.9",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "https-proxy-agent": "^7.0.6",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  }
